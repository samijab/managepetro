# ManagePetro Backend Environment Variables
# 
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Weather API Key
# Get your key from: https://www.weatherapi.com/
WEATHER_API_KEY=your_weather_api_key_here

# TomTom Maps API Key
# Get your key from: https://developer.tomtom.com/
TOMTOM_API_KEY=your_tomtom_api_key_here

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
# Note: Both GEMINI_API_KEY and gemenikey are supported (legacy)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================

# Database Host (use 'localhost' for local development)
DB_HOST=localhost

# Database Port (default MySQL port is 3306)
DB_PORT=3306

# Database Name
DB_NAME=manage_petro

# Database User
DB_USER=mp_app

# Database Password
DB_PASS=devpass

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Default city for weather collection (weather_collector.py)
# Default: Vancouver
WEATHER_CITY=Vancouver
