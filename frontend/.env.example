# Example .env file for ManagePetro Frontend
# Copy this file to .env and fill in your actual values

# Base URL for backend API (required)
VITE_API_BASE_URL=https://your-backend-url

# Default LLM model for route optimization (required)
VITE_DEFAULT_LLM_MODEL=gemini-2.5-flash

# Google Maps API key for map functionality (required)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Default depot location for route optimization (optional)
VITE_DEFAULT_DEPOT_LOCATION=Toronto

# API request timeout in milliseconds (optional, default: 120000)
VITE_API_TIMEOUT=120000

# Development mode flag (optional, for ErrorBoundary)
VITE_DEV=true

# Vite development server port (optional, default: 3000)
VITE_DEV_SERVER_PORT=3000

# Vite proxy target for API calls in development (optional, default: http://localhost:8000)
VITE_DEV_PROXY_TARGET=http://localhost:8000

# Default limit for trips API requests (optional, default: 50)
VITE_TRIPS_DEFAULT_LIMIT=50

# Debounce delay for input fields in milliseconds (optional, default: 200)
VITE_DEBOUNCE_DELAY=200

